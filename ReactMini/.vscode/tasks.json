{
	"version": "0.1.0",
	"command": "make",
	"showOutput": "always",
	"tasks": [{
		"taskName": "clean"
	}, {
		"taskName": "build",
	    "problemMatcher": {
        "fileLocation": "absolute",
        "owner": "ocaml",
        "pattern": [
        {
          "regexp": "^File \"(.*)\", line (\\d+)(?:, characters (\\d+)-(\\d+))?:$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endColumn": 4
        },
        {
          "regexp": "^(?:(?:Parse\\s+)?(Warning|[Ee]rror)(?:\\s+\\d+)?:)?\\s+(.*)$",
          "severity": 1,
          "message": 2,
          "loop": true
        }
        ]
      }
	}]
}
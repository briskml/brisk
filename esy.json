{
  "name": "brisk",
  "version": "0.1.0",
  "description": "Brisk is a set of tools for building fast native UIs",
  "repository": "https://github.com/briskml/brisk.git",
  "license": "MIT",
  "scripts": {
    "fmt": "dune build @fmt --auto-promote",
    "clean": "dune clean",
    "build:mac": "esy build -p @brisk/macos",
    "test:mac": "esy -C -p @brisk/macos dune runtest --root . --no-buffer"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">=3.4.0",
    "@brisk/macos": "*",
    "brisk-reconciler": "*"
  },
  "devDependencies": {
    "@opam/merlin-lsp": "*",
    "ocaml": "~4.7.1000"
  },
  "resolutions": {
    "@brisk/core": "link-dev:./core",
    "@brisk/macos": "link-dev:./renderer-macos",
    "@opam/merlin-lsp": "ocaml/merlin:merlin-lsp.opam#3e34bb5",
    "brisk-reconciler": "briskml/brisk-reconciler#fa605f1"
  }
}

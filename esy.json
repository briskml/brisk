{
  "name": "brisk",
  "version": "0.1.0",
  "description": "Brisk is a set of tools for building fast native UIs",
  "repository": "https://github.com/briskml/brisk.git",
  "license": "MIT",
  "scripts": {
    "clean": "dune clean",
    "build:core": "esy build -p @brisk/core",
    "build:mac": "esy build -p @brisk/renderer-macos",
    "build:tester_mac": "esy build -p @brisk/tester-macos",
    "test:core": "esy -p @brisk/core dune runtest --no-buffer --root ./core",
    "test:mac": "esy -p @brisk/renderer-macos dune runtest --no-buffer --root ./renderer-macos",
    "bootstrap:mac": "make -C tester-macos/app bootstrap",
    "run:mac": "esy x make -C tester-macos/app run"
  },
  "dependencies": {
    "@esy-ocaml/reason": "^3.3.7",
    "@brisk/core": "*",
    "@brisk/renderer-macos": "*",
    "@brisk/tester-macos": "*"
  },
  "devDependencies": {
    "@opam/merlin": "^3.2.2",
    "ocaml": "~4.7.1000"
  },
  "resolutions": {
    "@brisk/core": "link-dev:./core",
    "@brisk/renderer": "link-dev:./renderer",
    "@brisk/renderer-macos": "link-dev:./renderer-macos",
    "@brisk/tester-macos": "link-dev:./tester-macos",
    "@opam/osx-cf": "mirage/ocaml-osx-cf:opam#0c63247"
  }
}

{
  "name": "hacker-news-app",
  "version": "0.1.0",
  "esy": {
    "build": ["dune build @all -p hacker-news"],
    "buildsInSource": "unsafe"
  },
  "scripts": {
    "fmt": "dune build @fmt --auto-promote",
    "clean": "dune clean",
    "bundle": "dune build @bundle --only-packages hacker-news --root . --no-buffer --force",
    "run": "dune build @run --only-packages hacker-news --root . --no-buffer --force",
    "watch": "esy run --watch"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">=3.4.0",
    "@brisk/macos": "*",
    "@opam/dune": "^1.7.2",
    "@opam/cohttp-lwt-unix": "^1.2.0",
    "ocaml": "~4.7.1000",
    "graphql_ppx": "0.2.9"
  },
  "devDependencies": {
    "@opam/merlin": "^3.2.2",
    "xcodegen": ">=2.2.0",
    "xcpretty": "^0.2.8"
  },
  "resolutions": {
    "@brisk/core": "link:../../core",
    "@brisk/macos": "link:../../renderer-macos",
    "brisk-reconciler": "briskml/brisk-reconciler#be325c5",
    "graphql_ppx": "link:../../../graphql_ppx.nosync"
  }
}

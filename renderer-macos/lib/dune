(copy_files bindings/*)
(copy_files components/*)

(library
 (name brisk_macos)
 (public_name brisk-macos)
 (synopsis "Cocoa renderer and bindings")
 (libraries brisk-core brisk-renderer)
 (install_c_headers Cocoa_stubs
                    BriskApplicationDelegate
                    BriskWindowDelegate
                    )
 (c_names Cocoa_stubs
          BriskApplicationDelegate
          BriskWindowDelegate
          BriskButton
          BriskTextView
          BriskImage
          NSView_stubs
          NSMenu_stubs
          )
 (c_flags (:standard
  (-Wextra -Wall -Werror -O -g -std=c99 -pedantic-errors -Wsign-compare -Wshadow)
  (-x objective-c))))
